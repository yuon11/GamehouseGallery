<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="@id/main_home_game_layout"
    tools:context=".HomeGameFragment">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:weightSum="2">-->
        <LinearLayout
            android:id="@+id/main_home_game_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.google.android.material.tabs.TabLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/game_tabs"
                    android:background="@color/light_tan"
                    app:tabTextColor="@color/duke_blue"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabGravity="fill"/>
                <ImageView
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@id/game_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner"/>
                <androidx.viewpager2.widget.ViewPager2
                    app:layout_constraintTop_toBottomOf="@id/imageView"
                    app:layout_constraintBottom_toTopOf="@id/imageView2"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/imageView2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/banner"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_score_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/toggle_highscore_grid"
                android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="5">
                        <TextView
                            android:id="@+id/grid_name"
                            android:layout_weight=".1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HIGHSCORE BOARD"
                            android:textStyle="bold"
                            android:textSize="10pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/high_score_grid"/>
                        <GridLayout
                            android:id="@+id/high_score_grid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toBottomOf="@id/grid_name"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_weight="4.8"
                            android:columnCount="4"
                            android:rowCount="2"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/score_rank"
                                android:textAlignment="center"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="2"
                                android:gravity="center"
                                android:text="Rank" />
                            <TextView
                                android:id="@+id/difficulty"
                                android:textAlignment="center"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="2"
                                android:gravity="center"
                                android:text="Difficulty" />
                            <TextView
                                android:id="@+id/score"
                                android:textAlignment="center"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_columnWeight="2"
                                android:gravity="center"
                                android:text="Score" />
                            <TextView
                                android:id="@+id/score_date"
                                android:textAlignment="center"
                                android:layout_row="0"
                                android:layout_column="3"
                                android:layout_columnWeight="2"
                                android:gravity="center"
                                android:text="Date Of Score" />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/score_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnSpan="4"/>
                        </GridLayout>
                    </LinearLayout>
                <Button
                    android:id="@+id/toggle_highscore_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toggle Scoreboard"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_score_fragment_container"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
<!--    </ScrollView>-->
</FrameLayout>